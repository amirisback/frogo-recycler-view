<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frogo_rv_list_type_7_root_relative_layout"
    style="@style/FrogoLayoutList8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/frogo_rv_list_type_7_civ_poster"
        style="@style/frogoArea48dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/iv_poster"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/frogo_rv_list_type_7_tv_title"
        style="@style/frogoTvListTitle"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/frogo_dimen_16dp"
        android:layout_toEndOf="@id/frogo_rv_list_type_7_civ_poster"
        tools:text="@tools:sample/lorem/random" />

</RelativeLayout>